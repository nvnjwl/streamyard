									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Missing hostId\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/room",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"room"
							]
						}
					},
					"response": []
