									"        pm.environment.set('userId', jsonData.user.id);",
									"        pm.environment.set('userEmail', jsonData.user.email);",
									"    } else if (jsonData.status === 'error' && jsonData.message === 'USER_EXISTS') {",
									"        pm.test('User already exists', function () {",
									"            pm.expect(jsonData.message).to.eql('USER_EXISTS');",
